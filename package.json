{
  "name": "hason",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter=app dev",
    "build": "pnpm build:packages && pnpm --filter=app build",
    "build:packages": "pnpm --filter=jq-hason build",
    "check": "pnpm --filter=app check",
    "lint": "pnpm --filter=app lint",
    "preview": "pnpm --filter=app preview",
    "test": "pnpm --filter=app test",
    "test:ui": "pnpm --filter=app test:ui",
    "test:coverage": "pnpm --filter=app test:coverage",
    "test:e2e": "pnpm --filter=app test:e2e",
    "test:e2e:headed": "pnpm --filter=app test:e2e:headed",
    "test:e2e:debug": "pnpm --filter=app test:e2e:debug",
    "test:e2e:ui": "pnpm --filter=app test:e2e:ui",
    "test:e2e:report": "pnpm --filter=app test:e2e:report",
    "test:e2e:install": "pnpm --filter=app test:e2e:install",
    "setup:jq": "nix run .#setup-jq",
    "build:wasm": "nix run .#build-jq-wasm",
    "update:jq-version": "nix run .#update-jq-version --"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^24.6.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^6.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "oxlint": "^1.19.0",
    "oxlint-tsgolint": "^0.2.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.2.4",
    "workbox-core": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  },
  "oxlint": {
    "ignore": [
      "dist/",
      "build/",
      "result/",
      "node_modules/",
      "coverage/",
      ".nyc_output/",
      "*.tmp",
      "*.temp",
      ".vscode/",
      ".idea/",
      ".DS_Store",
      "Thumbs.db",
      ".cache/",
      ".parcel-cache/",
      "test-results/",
      "playwright-report/"
    ]
  }
}
